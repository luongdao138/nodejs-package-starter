{
  "name": "nodejs-package-starter",
  "version": "1.0.0",
  "description": "This is my favorite starter code for a nodejs npm package",
  "main": "dist/index.js",
  "author": "luongdao <luong.dao@pionero.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.17",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.194",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.2",
    "@types/stack-trace": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "cross-env": "^5.2.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "argon2": "^0.30.3",
    "awilix": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "glob": "^10.2.2",
    "helmet": "^6.1.5",
    "ioredis": "^5.3.2",
    "ioredis-mock": "^8.7.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "medusa-telemetry": "^0.0.16",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "ora": "5.4.1",
    "pg": "^8.10.0",
    "randomatic": "^3.1.1",
    "redis": "^4.6.6",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "stack-trace": "0.0.10",
    "typeorm": "^0.3.15",
    "ulid": "^2.3.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  },
  "scripts": {
    "watch": "tsc --watch --project tsconfig.build.json",
    "prepare": "cross-env NODE_ENV=production yarn run build && husky install",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "serve": "node dist/index.js",
    "test": "jest",
    "format": "prettier --write .",
    "lint": "eslint . --max-warnings 0 --report-unused-disable-directives --ignore-pattern *.test.ts --ignore-pattern *.test.js",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --pretty --noEmit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "nodemon",
    "migration:run": "node dist/cli/migrate.js run",
    "migration:create": "typeorm migration:create"
  }
}
